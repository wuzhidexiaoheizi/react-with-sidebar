.list-page-container
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  overflow hidden
  
  .list-page-container
    position relative
    height 100%
    overflow auto
    
  .list-page
    padding-bottom 100px
    position relative
    z-index 3
    height 100%
    
    .list-poster
      width 100%
      display block

  .dr-container
    position absolute
    width 100%
    bottom 10px
    z-index 12
    line-height 100px
    padding-right 110px
    text-align center
    
    .dr-text
      color #FFF
      font-size 2rem
      font-weight 900
    
    .dr-img
      height 100px
      display block
      position absolute
      bottom 0
      right 10px
      border 1px solid #DDD