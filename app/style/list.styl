.list-container
  font-size 2.5rem

  .list-page-container
    position relative
    height 100%
    overflow auto
    background $containerBgColor
    
  .list-page
    padding-bottom 110px
    position relative
    z-index 3
    
    > .container
      background-image url(../images/bg.jpg)
      background-repeat repeat
    
    .list-poster
      width 100%
      display block

  .dr-container
    position absolute
    width 100%
    bottom 10px
    z-index 12
    line-height 100px
    padding-right 110px
    text-align center
    max-width 640px
    
    .dr-text
      color #333
      font-size 2rem
      font-weight 900
    
    .dr-img
      width 100px
      display block
      position absolute
      bottom 0
      right 8px
      border 1px solid #DDD
   
  .loading-container
    position absolute
    bottom 20px
    text-align center
    line-height 50px
    left 0
    right 0
    z-index 13
    
  .list-header
    position relative
    
    .guide-entrance
      position absolute
      bottom 5%
      width 50%
      height 42%
      left 25%
    
  .recent-parties
    margin-bottom 30px
    
  .recent-poster, .cake-poster
    display block
    margin 15px auto
    width 80%

  .cake-list
    padding 10px

  .cake-item
    border-width 1px
    border-style solid
    border-color $borderColor
    margin-bottom 10px
    background #fff
    
    &:last-child
      margin-bottom 0
    
    .link
      display block
      color #333
      padding 8px
      
      .item-pic
        width 100%
        overflow hidden
        box-shadow 0 0 1px #ddd
      
      .item-title
        display -webkit-box
        overflow hidden
        text-overflow ellipsis
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        
  .item-price
    padding 8px 0
    font-family $enFontFamily
    
    .price
      color $red
      font-weight 900
      font-size 3rem
      margin-right 1rem
          
  .donee-count
    padding 6px 0
    text-align center
    background $orange
    color $red
    border 1px solid #E4D166
    border-radius 5px
    
    img
      font-size 2.5rem
      
  .party-entrance
    position absolute
    top 20px
    left 0
    right 0
    z-index 2
    
    .entrance-wrap
      position relative
      width 100%
      max-width 640px
      margin 0 auto
      text-align right

      a
        font-size 16px
        font-weight 700
        color #fff
        margin-right 15px
        
  .party-link
    color #333
    display block
    padding 0 10px
    margin-bottom 10px
      
  .item-wrap
    border 1px solid $borderColor
    background #FCFBF9
    padding 10px

  .recent-item
    display table
    width 100%
    font-size 14px
    
  .table-col
    display table-cell
    vertical-align top
      
    &.gnh
      width 96px
      
    &.brief
      width 50px
      
  .progress
    margin 10px 0 0 0
    height 12px
    background #ddd
    
    .progress-bar
      line-height 12px
      background #F24E5B
      
  .donee-avatar
    width 100%
    box-shadow 0 0 3px $borderColor
    
  .other
    word-break break-all
    max-width 0
    vertical-align middle
    padding 0 8px
    
    .amt
      font-family $enFontFamily
      color $red
    
  .topic
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    
  .gnh-card
    border 2px solid $red
    border-radius 5px
    
  .gnh-title
    background $red
    text-align center
    padding 1px
    color #fff
    
  .gnh-value
    text-align center
    padding 1px
    color $red
    font-family $enFontFamily
        
  .empty-list
    line-height 120px
    text-align center
    
  .modal-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    z-index 5
    display none

@media (min-width: 480px)
  .list-page
    font-size 16px
          
    .table-col.gnh
      width 126px
          
    .table-col.brief
      width 75px
      
    .other
      margin-left 85px
          
    .gnh-title, .gnh-value
      padding 5px 
      
    .recent-item
      font-size 16px 

@media (max-width: 420px)
  .list-container
    font-size 1.5rem

    .item-price .price
      font-size 2rem

    .donee-count img
      width 1.5rem 
       
@media (max-width: 368px)
  .list-container
    font-size 1.2rem
    
    .item-price .price
      font-size 1.5rem
    
    .donee-count img
      width 1.2rem


    