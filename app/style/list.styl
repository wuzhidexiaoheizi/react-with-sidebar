.list-container
  .list-page-container
    position relative
    height 100%
    overflow auto
    background $containerBgColor
    
  .list-page
    padding-bottom 100px
    position relative
    z-index 3
    
    > .container
      background $contentBgColor
    
    .list-poster
      width 100%
      display block

  .dr-container
    position absolute
    width 100%
    bottom 10px
    z-index 12
    line-height 100px
    padding-right 110px
    text-align center
    max-width 640px
    
    .dr-text
      color #333
      font-size 2rem
      font-weight 900
    
    .dr-img
      height 100px
      display block
      position absolute
      bottom 0
      right 8px
      border 1px solid #DDD
      
  .cake-list
    padding 10px 0

  .cake-item
    border-width 1px 0
    border-style solid
    border-color $borderColor
    margin-bottom 10px
    
    .link
      display block
      color #333
      padding 8px
      
      .item-pic
        width 100%
        overflow hidden
        box-shadow 0 0 1px #ddd
      
      .item-title
        font-size 1.4rem
        display -webkit-box
        overflow hidden
        text-overflow ellipsis
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        
      .item-price
        padding 8px 0
        font-family $enFontFamily
        
        .price
          color $red
          font-size 2rem
          font-weight 900
          margin-right 1rem
          
  .donee-count
    padding 6px 0
    text-align center
    background $orange
    color $red
    border 1px solid #E4D166
    border-radius 5px
    
@media (max-width: 368px)
  .list-container .donee-count
    padding 3px 0
    
@media (min-width: 678px)
  .list-container .cake-list
    padding 10px
    
    .cake-item
      border-width 1px
    

    