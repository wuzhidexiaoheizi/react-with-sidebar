.anim-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 9999
  background rgba(0,0,0,0.3)
  
  &.shown
    display block
  
  .anim-close
    position absolute
    left 50%
    bottom 20%
    margin-left -34px
    width 60px
    height 60px
    border 1px solid #eee
    border-radius 50%
    background:rgba(0,0,0,0.1)
    font-size 18px
    color:#fff

  .anim
    position absolute
    top 0
    bottom 0
    left 0 
    right 0
    margin auto
    width 200px
    height 200px
  
  .heart
    background url('../images/spirit_redheart.png') 0 0 no-repeat
    animation heart 1.9s steps(14) 
    background url(http://wanliu-piano.b0.upaiyun.com/uploads/shop/logo/198/fa2fbd0d1d1b6a3dc6afe0f5a7bad564.png) 0 0 no-repeat
    animation heart 1.7s steps(14) 
    animation-fill-mode forwards 
  
  @keyframes heart
    0%
      background-position -5px -5px
    25%
      background-position -5px -2805px
    65%
      background-position -5px -5px
    100%
      background-position -5px -2805px
  
  .flower
    background url(http://wanliu-piano.b0.upaiyun.com/uploads/shop/logo/198/f6f4b746bb5650d9dfbb9faaf4b31232.png) 0 0 no-repeat
    animation flower 3.5s steps(18) 
    animation-fill-mode forwards 
  
  @keyframes flower 
   0%
     background-position 0 0
   100%
     background-position 0 -3600px
     
  .music_box
    .anim-item1 
      width 240px
      height 240px
      background url('../images/sprite_train.png') 0 0 no-repeat
      animation train 1.3s steps(8) infinite
      animation-fill-mode forwards 
      z-index 9999
    .anim-item2
      position absolute
      top 0
      width 340px
      height 340px
      background url('../images/sprite_music_bg.png') 0 0 no-repeat
      animation music-bg 3.5s steps(17) infinite
      animation-fill-mode forwards  
      z-index -1
      
  @keyframes train
   0%
     background-position -20px 0
   100%
     background-position -20px -1920px

  @keyframes music-bg
   0%
     background-position 0 0
   100%
     background-position 0 -4080px