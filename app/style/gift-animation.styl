.anim-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 26
  background rgba(0,0,0,0.5)
  
  &.shown
    display block
  
  .anim-close
    position fixed
    left 50%
    bottom 10%
    margin-left -34px
    width 60px
    height 60px
    border 1px solid #eee
    border-radius 50%
    background rgba(0,0,0,0.1)
    font-size 18px
    color #fff
    
  .donee-name
    position absolute
    top 10%
    left 0
    right 0
    text-align center
    font-size 36px
    font-weight 700
    color #fff
    
    .name
      font-size 42px

  .anim
    position absolute
    top 0
    bottom 0
    left 0 
    right 0
    margin auto
    width 200px
    height 200px
    background-repeat no-repeat
    
    .invalid
      font-size 26px
      font-weight 700
      color #fff
      text-align center
      line-height 200px
      
  .heart
    width 200px
    height 200px
     
  .music_box
    width 240px
    height 240px
    
  .pleasant_sheep
    width 300px
    height 300px 
    
  .ultraman
    width 300px
    height 300px
    
  .bonnie_bear
    width 300px
    height 237px