.party-card
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 25
  
  .party-card-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(0, 0, 0, 0.9)
    opacity 0
    
  .party-card-content
    position relative
    width 100%
    height 100%
    overflow-y auto
    overflow-x hidden
    
    .party-card-body
      width 80%
      max-width 350px
      margin -500px auto 30px
      
  .card-content
    position relative
    background $red
    border-radius 5px
    padding 5px
    
    .birthman-avatar
      position absolute
      width 100px
      height 100px
      top -50px
      left 50%
      margin-left -50px
      border-radius 50px
      background $red
      padding 5px
      
      img
        width 100%
        height 100%
        border-radius 50%
        
    .card-top
      background #fff
      padding 50px 30px 10px
      border-radius 5px
      
      .birthman-name
        text-align center
        margin-bottom 10px
      
      .indent
        text-indent 2em
        
    .card-bottom
      padding 15px 5px
      text-align center
      
      .btn-confirm
        width 100%
        background $orange
        border none
        color $red
        font-weight 700
        font-size 16px