.rank-page
  .rank-page-container
    position relative
    height 100%
    overflow auto

  .rank-container
    padding-bottom 110px
    position relative
    z-index 3
    
    > .container
      background-image url(../images/bg.jpg)
      background-repeat repeat
    
  .dr-container
    position absolute
    width 100%
    bottom 10px
    z-index 12
    line-height 100px
    padding-right 110px
    text-align center
    max-width 640px
    
    .dr-text
      color #333
      font-size 2rem
      font-weight 900
    
    .dr-img
      width 100px
      display block
      position absolute
      bottom 0
      right 8px
      border 1px solid #DDD
   
  .loading-container
    position absolute
    bottom 20px
    text-align center
    line-height 50px
    left 0
    right 0
    z-index 13
    
  .rank-page-header
    position relative
    
    .rank_header
      width 100%
    
  .rank-page-body
    padding 15px 0

  .party-link
    display block
    text-decoration none
    color #333
    
  .party-item
    display table
    width 100%
    padding 0 15px
    
  .table-col
    display table-cell
    vertical-align middle
    padding 8px
    
    &.rank
      width 46px
      text-align center
      font-family $enFontFamily
      font-size 24px
      font-weight 700
      color $red
      
      img
        width 30px
      
    &.gnh
      width 96px
      
    &.brief
      max-width 0
      
  .donee-avatar
    width 50px
    float left
    box-shadow 0 0 3px $borderColor
    
  .other
    margin-left 60px
    text-align left
    word-break break-all
    
    .amt
      font-family $enFontFamily
      color $red
    
  .topic
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    
  .gnh-card
    border 2px solid $red
    border-radius 5px
    
  .gnh-title
    background $red
    text-align center
    padding 3px
    color #fff
    
  .gnh-value
    text-align center
    padding 3px
    color $red
    font-family $enFontFamily

  .party-item
    border-bottom 1px solid $darkBorderColor

  .party-link:last-child .party-item
    border-bottom none
        
  .empty-list
    line-height 120px
    text-align center

@media (min-width: 480px)
  .rank-page
    font-size 16px

    .table-col.rank
      width 75px
      font-size 36px
        
      img
        width 55px
          
    .table-col.gnh
      width 126px
          
    .donee-avatar
      width 75px
      
    .other
      margin-left 85px
          
    .gnh-title, .gnh-value
      padding 5px  
      