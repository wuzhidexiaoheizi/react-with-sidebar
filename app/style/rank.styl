@media (max-width: 630px)
  .rank-page 
    .party-table-header, .party-table-body
      .table-col
        vertical-align top
        padding 5px 0

      .donee-avatar, .donee-cake
        float none
        
      .person-name, .cake-title
        margin-left 0
        margin-top 5px
        
      .party-item
        .table-col
          padding 5px
      