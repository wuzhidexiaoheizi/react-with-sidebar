.rank-page
  .rank-page-container
    position relative
    height 100%
    overflow auto

  .rank-container
    padding-bottom 110px
    position relative
    z-index 3
    
    > .container
      background-image url(../images/bg.jpg)
      background-repeat repeat
    
  .dr-container
    position absolute
    width 100%
    bottom 10px
    z-index 12
    line-height 100px
    padding-right 110px
    text-align center
    max-width 640px
    
    .dr-text
      color #333
      font-size 2rem
      font-weight 900
    
    .dr-img
      width 100px
      display block
      position absolute
      bottom 0
      right 8px
      border 1px solid #DDD
   
  .loading-container
    position absolute
    bottom 20px
    text-align center
    line-height 50px
    left 0
    right 0
    z-index 13
    
  .party-link
    display block
    text-decoration none
    color #333
    
  .party-table-header, .party-table-body
    display table
    width 100%
    border-bottom 1px solid $borderColor
    
    .table-col
      display table-cell
      text-align center
      vertical-align middle
      padding 10px 0
      
      &.donee, &.cake
        width 30%
        
      &.withdraw, &.summary
        width 20%
        
    .donee-avatar, .donee-cake
      width 75px
      height 75px
      float left
      
    .person-name, .cake-title
      margin-left 80px
      text-align left
      word-break break-all
    
    .party-item
      .table-col
        padding 10px

      .withdraw, .summary
        line-height 75px
        
