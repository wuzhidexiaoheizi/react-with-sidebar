.detail-container
  .detail-actions .buy-now
    height 50px
    line-height 50px
    background $red
    color #fff
    letter-spacing 5px
    text-align center
    font-size 2rem
    font-weight 700
    
  .detail-header
    position relative
    
    .logo-link
      background rgba(239, 58, 35, 0.8)
      top 3%
      box-shadow 0 0 10px #D28383

    .item-detail-info
      background $red
      
      .media-left
        width 60%
        padding 10px
        color #fff
        font-family $enFontFamily
        white-space nowrap
        
        .sales-price
          font-size 3rem
          color $orange
          float left
          font-weight 700
          margin-right 8px
        
        .saled-count, .cashback
          display inline-block
          padding 3px
          line-height 1
          border-radius 3px 
          background #C7002A
      
      .media-body
        text-align right
        padding 10px 10px 10px 0

        .favor-count
          display inline-block
          background-color #f7d92c
          color #F12729
          padding 8px 10px
          border-radius 5px
          font-size 1.2rem
          
          img
            width 24px
        
  .detail-body
    .buyer-summary
      margin-bottom 4px

    .buyer-container
      padding 8px
      border-bottom 1px solid #ccc

      .buyer-item
        float left
        padding 3px
        
        img
          border-radius 5px
          width 50px
          height 50px
          
    .supplier-container
      display table
      width 100%
      padding 10px
      border-bottom 1px solid #ccc
      
      .shop-logo
        display table-cell
        width 75px
        vertical-align middle

        img
          width 75px
          height 75px
          overflow hidden
          border 1px solid #ccc

      .shop-sev
        display table-cell
        padding-left 10px
        vertical-align top
        max-width 0
        
        p
          margin 0 0 5px 0

      .favorite-amount
        .fav-count
          display inline-block
          width 40px

      .fav-btn
        padding 3px 6px
        background #ED2A39
        color #fff

        .fa
          margin-right 3px
          
    .item-description
      padding 10px

  
    

    