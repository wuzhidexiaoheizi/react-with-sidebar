.envelope-modal
  position fixed
  z-index 20
  left 0
  right 0
  top 0
  bottom 0
  
  .envelope-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(0, 0, 0, 0.85)
    
  .envelope
    margin -1000px auto 30px
    width 480px
    position relative
    
    .envelope-image
      width 100%
    
    .cake-image
      position absolute
      top 10%
      left 50%
      width 150px
      height 150px
      margin-left -75px
      
      img
        width 100%
        height 100%
        border-radius 50%
        
    .envelope-amount
      position absolute
      top 40%
      left 0
      width 100%
      
      .amount
        font-family $enFontFamily
        color $orange
        font-size 48px
        font-weight 700
        text-align center
        line-height 1
        
      .envelope-desc
        width 40%
        margin 5px auto 0
        background #DB1111
        border-radius 10px
        padding 6px 0
        text-align center
        color #fff
        
        .currency
          font-size 42px
          
@media (max-width 480px)
  .envelope-modal .envelope
    width 320px
    
    .cake-image
      width 100px
      height 100px
      margin-left -50px