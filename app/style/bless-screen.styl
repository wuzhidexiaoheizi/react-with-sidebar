.cut-screen
  position absolute
  left  0
  right 0
  top 0
  bottom 0
  z-index 25
  visibility hidden
  overflow hidden
  
  .light-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(255, 255, 255, 0.95)
    
  .dark-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(0, 0, 0, 0.95)
    z-index 1
    
  .screen-container
    position relative
    z-index 2
    height 100%
    
  .screen-content
    position relative
    width 100%
    max-width 640px
    margin 0 auto
    overflow hidden
    height 100%
    
    .main-zone
      position relative
      padding 15px

      .contributor, .present-name
        line-height 30px
        font-size 20px
        font-weight 700
        color $red
        text-align center
        position absolute
        width 100%
        height 30px
        left 0
        
      .contributor
        top 15px
        
      .present-name
        top 215px
        
      .animation-zone-wrap
        height 300px
        width 300px
        margin 0 auto
        position relative
        
      .animate-zone
        position relative
        width 100%
        height 100%
        
        .invalid
          line-height 200px
          font-size 32px
          color $red
          font-weight 700
          text-align center
          
        .heart-img
          width 200px
          height 200px
          margin 0 auto
          overflow hidden
          display block
          
      .culmulate-zone
        position absolute
        left 0
        top 0
        z-index 1
        width 100%
        height 100%
        
    .gift-zone
      position absolute
      top 275px
      bottom 0
      left 0
      right 0
      overflow hidden
      
      .party-gnh
        background none
        
    .skip-btn
      position absolute
      top 15px
      right 15px
      height 30px
      line-height 30px
      padding 0 8px
      border-radius 8px
      background rgba(0, 0, 0, 0.5)
      color #fff
      display none
      z-index 31