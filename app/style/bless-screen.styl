.cut-screen
  position absolute
  left  0
  right 0
  top 0
  bottom 0
  z-index 25
  visibility hidden
  overflow hidden
  
  .light-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(255, 255, 255, 0.8)
    
  .dark-overlayer
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background rgba(0, 0, 0, 0.8)
    z-index 1
    
  .screen-container
    position relative
    z-index 2
    height 100%
    
  .screen-content
    position relative
    width 100%
    max-width 640px
    margin 0 auto
    overflow hidden
    height 100%
    
    .main-zone
      padding 15px

      .contributor, .present-name
        line-height 30px
        font-size 20px
        font-weight 700
        color $red
        text-align center
        
      .animate-zone
        height 200px
        width 200px
        margin 0 auto
        position relative
        
        .invalid
          line-height 200px
          font-size 32px
          color $red
          font-weight 700
          text-align center
          
        .heart-img
          width 100%
          height 100%
          overflow hidden
        
    .gift-zone
      position absolute
      top 275px
      bottom 20px
      left 0
      right 0
      overflow hidden
      
      .party-gnh
        background none
        
    .skip-btn
      position absolute
      top 15px
      right 15px
      height 30px
      line-height 30px
      padding 0 8px
      border-radius 8px
      background rgba(0, 0, 0, 0.5)
      color #fff
      display none