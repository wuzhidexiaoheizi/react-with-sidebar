.party-container 
  .party-footer
    z-index 11
    
    .party-actions
      display table
      width 100%
      height 50px
    
    .give-bless, .goto-review
      text-align center
      font-size 2rem
      display table-cell
      vertical-align middle
      
    .give-bless
      background $orange
      color $red
      
    .goto-review
      background $red
      color #fff
      
  .party-header
    position relative

    .party-poster
      max-width 640px
      overflow hidden
      width 100%
      position relative
      z-index 6
      
  .avatar-container
    position absolute
    top 34%
    left 16%
    width 70%
    border-radius 50%
    overflow hidden
    
    .image-area
      position absolute
      width 100%
      height 100%
      left 0
      top 0
      z-index 7
      background transparent
      
    .avatar-image
      border-radius 50%
      overflow hidden
      width 100%
      
    .avatar-input
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      font-size 1000px
      overflow hidden
      opacity 0
      z-index 7
      
    .upload-overlayer
      position absolute
      z-index 6
      left 2%
      right 2%
      top 2%
      bottom 2%
      border-radius 50%
      background rgba(0, 0, 0, 0.5)
      
    .rotate-arr
      position absolute
      right 12%
      top 35%
          
  .upload-tip
    position absolute
    top 50%
    left 50%
    margin-left -55px
    padding 5px
    font-size 16px
    border 2px solid #fff
    color #fff
        
  .birthday-bless
    position absolute
    bottom 5%
    left 14%
    right 14%
    height 11.5%
    z-index 8
    color $red
    text-align center
    background #fff
    
    .birthday, .bless
      position absolute
      left 0
      right 0
      height 50%
      
    .sentence
      position absolute
      left 0
      top 50%
      right 0
      font-size 2.4rem
      margin-top -1.2rem
    
    .bless
      top 50%
      
    .date-sentence
      top 0
  
  .bless-list
    border-top 1px solid $borderColor
  
  .bless-summary
    color #fff
    padding-bottom 10px
    
    .bless-review
      border-right 1px solid #999
      
      &:last-child
        border-right none
        

.unread-gifts
  position absolute
  right 0
  bottom 50px
  display none
  
  img
    width 60px
    
  .unread-desc
    position absolute
    left 0
    top 12px
    right 0
    text-align center
    font-size 12px
    color $red
         
@media (max-width: 480px)
  .party-container
    .avatar-container .rotate-arr img
      width 34px
      
    .birthday-bless .sentence
      font-size 1.4rem
      margin-top -0.7rem
      
@media (max-width: 320px)
  .party-container
    .avatar-container .rotate-arr img
      width 30px
      
    .birthday-bless .sentence
      font-size 1.6rem
      margin-top -0.8rem
        