.party-container
  .party-nano
    position relative
    height 100%
    overflow hidden
    
    .party-content
      position relative
      height 100%
      padding-bottom 60px
      overflow auto
      
  .party-footer
    position absolute
    bottom 0
    left 0
    width 100%
    
    .give-bless
      height 50px
      line-height 50px
      background $orange
      color $red
      letter-spacing 2px
      text-align center
      font-size 2rem
      
  .party-header
    .party-poster
      max-width 1200px
      overflow hidden
      width 100%
      max-height 400px
      
  .party-body
    padding 15px 10px 0
      
  .bless-container
    background $red
    padding 10px
    border-radius 5px
    
    .bless-summary
      color #fff
      padding-bottom 10px
      
      .bless-review
        border-right 1px solid #999
        
        &:last-child
          border-right none
      
    .bless-list
      .bless-item
        margin-bottom 10px
        border-radius 5px
        background #fff
        padding 10px
        
        .bless-item-top
          padding-bottom 10px
          border-bottom 1px solid $borderColor
          
          .benefactor-avatar
            float left
            width 40px
            
            img
              width 100%
              overflow hidden
              
          .bless-factors
            margin-left 45px
            
            .benefactor-name
              color #8BA2D2
              margin-right 3px
              
            .donee-name
              color #8BA2D2
              margin 0 3px
          
        .bless-item-bottom
          padding-top 10px
        