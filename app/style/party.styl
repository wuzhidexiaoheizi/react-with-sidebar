.party-container 
  .container-content > .container
    background-image url(../images/bg.jpg)
    background-repeat repeat

  .party-footer
    z-index 11
    
    .party-actions
      display table
      width 100%
      height 50px
    
    .give-bless, .goto-review
      text-align center
      font-size 2rem
      display table-cell
      vertical-align middle
      
    .give-bless
      background $orange
      color $red
      
    .goto-review
      background $red
      color #fff
      
  .party-header
    position relative

    .party-poster
      max-width 640px
      overflow hidden
      width 100%
      position relative
      z-index 6
      
    .avatar-container
      position absolute
      top 34%
      left 16%
      width 70%
      border-radius 50%
      overflow hidden
      
      .image-area
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        z-index 7
        background transparent
      
      img
        border-radius 50%
        overflow hidden
        width 100%
        
      .avatar-input
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        font-size 1000px
        overflow hidden
        opacity 0
        z-index 7
        
  .birthday-bless
    position absolute
    bottom 5%
    left 14%
    right 14%
    height 12%
    z-index 8
    color $red
    text-align center
    
    .birthday, .bless
      position absolute
      left 0
      right 0
      height 50%
      
    .sentence
      position absolute
      left 0
      top 50%
      right 0
      font-size 2.4rem
      margin-top -1.2rem
    
    .bless
      top 50%
      
    .date-sentence
      top 0

  .party-body
    padding 0 10px 10px
    
  .gift-wrap
    padding 10px
    margin 0 -10px 10px
    border-width 1px 0
    border-style solid
    border-color $red
    background #F5E7E7
    
    .gift-item
      display inline-block
      padding 5px
      
      .gift-avatar
        width 40px
      
  .bless-list
    padding 10px
    border-radius 5px
    background $red
  
  .bless-summary
    color #fff
    padding-bottom 10px
    
    .bless-review
      border-right 1px solid #999
      
      &:last-child
        border-right none
        
  .bless-dispatcher
    position absolute
    right 20px
    bottom 80px
    background #333
    color #fff
    padding 3px 6px
      
@media (max-width: 320px)
  .party-container .birthday-bless .sentence
    font-size 1rem
    margin-top -0.5rem
    
@media (max-width: 480px)
  .party-container .birthday-bless .sentence
    font-size 1.6rem
    margin-top -0.8rem
        