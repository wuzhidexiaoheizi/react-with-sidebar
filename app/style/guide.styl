.novice-guide
  position absolute
  z-index 30
  left 0
  right 0
  top -100%
  height 100%

  .guide-overlayer
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.8)
    
  .guide-container
    position relative
    width 100%
    max-width 640px
    margin 0 auto
    height 100%
    overflow hidden
    
    .inner-container
      position relative
      padding 0 15px
      height 100%
    
    .guide-content
      position absolute
      top 0
      bottom 80px
      left 0
      right 0
      overflow-y auto
      overflow-x hidden
      
    .guide-close
      position absolute
      bottom 0
      height 80px
      border-top 1px solid $darkBorderColor
      left 0
      width 100%
      
      .close-btn
        width 58px
        height 58px
        text-align center
        line-height 56px
        border-radius 50%
        border 1px solid $darkBorderColor
        margin 10px auto
        color #fff
        font-size 20px
        
    .guide-step
      color #fff
      padding 15px

      .guide-image
        text-align center
        
        img
          max-width 100%
        
      .guide-desc
        font-size 18px
        margin-top 10px

  
