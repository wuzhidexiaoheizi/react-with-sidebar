.bullet-screen
  position absolute
  top 100px
  left 18px
  right 30px
  z-index 19
  height 250px
  
  &.shown
    display block
    
  &.hide
    display none 
    
  .screen-content
    position relative
    top 0
    max-width 640px
    margin 0 auto
    height 100%
    width 100%
    overflow hidden
    
