.bullet-screen
  position absolute
  top 100px
  left 18px
  right 30px
  z-index 19
  
  &.shown
    display block
    
  &.hide
    display none 
    
  .screen-content
    position relative
    top 0
    max-width 640px
    margin 0 auto
    width 100%
    overflow hidden
    
.bullet-toggle-container
  position absolute
  top 5%
  left 0
  right 0
  z-index 19
  
  .toggle-container
     position relative
     width 100%
     max-width 640px
     margin 0 auto
     overflow hidden
     height 40px

.bullet-toggle
  position absolute
  right 20px
  height 100%
  width 90px
  padding 5px
  
  .toggle-track
    position relative
    width 100%
    height 26px
    border-radius 6px
    background rgba(0, 0, 0, 0.5)
  
  .bullet-button
    position absolute
    top 3px
    left auto
    right 5px
    height 30px
    line-height 30px
    width 50px
    text-align center
    border-radius 6px
    background #fff
    color #333
    box-shadow 0 0 2px #333
    transition left 0.45s ease-in-out 0s, right 0.45s ease-in-out 0s
    -webkit-transition left 0.45s ease-in-out 0s, right 0.45s ease-in-out 0s
      
  &.closed
    .toggle-track
      background rgba(255, 255, 255, 0.9)

    .bullet-button
      right auto
      left 5px
      background #333
      color #fff
      box-shadow 0 0 2px #fff