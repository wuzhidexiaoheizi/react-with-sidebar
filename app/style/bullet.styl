.bullet-toggle
  position absolute
  top 8%
  left 0
  right 0
  z-index 19
  
  .button-container
    position relative
    top 0
    max-width 640px
    margin 0 auto
    height 100%
    width 100%
    
    .bullet-button
      position absolute
      bottom 0
      right 5%
      height 24px
      line-height 24px
      padding 0 8px
      border-radius 8px
      background rgba(0, 0, 0, 0.3)
      color #fff