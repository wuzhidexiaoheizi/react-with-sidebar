.bullet-screen
  position absolute
  top 100px
  left 18px
  right 30px
  z-index 19
  
  &.shown
    display block
    
  &.hide
    display none 
    
  .screen-content
    position relative
    top 0
    max-width 640px
    margin 0 auto
    width 100%
    overflow hidden
      
.bullet-toggle
  position absolute
  top 8%
  right 20px
  height 26px
  z-index 19
  border-radius 6px
  background rgba(0, 0, 0, 0.5)
  width 80px
  
  .button-container
    position relative
    top 0
    max-width 640px
    margin 0 auto
    height 100%
    width 100%
    
    .bullet-button
      position absolute
      top -2px
      left auto
      right 0
      height 30px
      line-height 30px
      width 50px
      text-align center
      border-radius 6px
      background #fff
      color #333
      box-shadow 0 0 2px #333
      transition left 0.45s ease-in-out 0s, right 0.45s ease-in-out 0s
      -webkit-transition left 0.45s ease-in-out 0s, right 0.45s ease-in-out 0s
      
  &.closed
    background rgba(255, 255, 255, 0.9)

    .bullet-button
      right auto
      left 0
      background #333
      color #fff
      box-shadow 0 0 2px #fff