.bullet-screen
  position absolute
  top 100px
  left 0
  right 0
  z-index 19
  
  .screen-content
    position relative
    top 0
    max-width 640px
    margin 0 auto
    height 100%
    width 100%
    
    .bullet-track
      position relative
      height 26px
      line-height 26px
      overflow hidden
      background rgba(0, 0, 0, 0.25)
      color #fff

    .bullet-item
      white-space nowrap
      position absolute
      top 0
      overflow hidden
